{
  "compilerOptions": {
    /* Projects */
    "composite": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    /* Language and Environment */
    "target": "es2018", // Actualizado a ES2018
    "module": "es6", // Cambiado a m贸dulos ES6
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Modules */
    "moduleResolution": "node", // Se establece la resoluci贸n de m贸dulos a 'node'
    "baseUrl": "./",
    "paths": {},
    "typeRoots": [
      "node_modules/@types"
    ],
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib", // Carpeta de salida para los archivos generados
    /* Type Checking */
    "skipLibCheck": true,
  },
  /* Exclusi贸n de Archivos */
  "exclude": [
    "**.js",
    "**.d.ts",
    "lib"
  ]
}